<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gardabook.mobileapp" version="0.6.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>GardaBook</name>
    <description>
        Gardabook Application
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-googleplus" source="npm">
        <variable name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.761641708289-ttd7sc03mjkrno4b4vk6m1tru9iiog3i" />
        <variable name="WEB_APPLICATION_CLIENT_ID" value="mywebapplicationclientid" />
    </plugin>
    <access origin="https://api.gardabook.com" />
    <access origin="https://cognito-idp.ap-southeast-1.amazonaws.com" />
    <platform name="android">
        <allow-intent href="market:*" />
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>
        <icon src="res/android/logo/drawable-ldpi/logo-icon.png" density="ldpi" />
        <icon src="res/android/logo/drawable-mdpi/logo-icon.png" density="mdpi" />
        <icon src="res/android/logo/drawable-hdpi/logo-icon.png" density="hdpi" />
        <icon src="res/android/logo/drawable-xhdpi/logo-icon.png" density="xhdpi" />
        <icon src="res/android/logo/drawable-xxhdpi/logo-icon.png" density="xxhdpi" />
        <icon src="res/android/logo/drawable-xxxhdpi/logo-icon.png" density="xxxhdpi" />
        <splash src="res/android/splash/drawable-ldpi/Splash.png" density="ldpi" />
        <splash src="res/android/splash/drawable-mdpi/Splash.png" density="mdpi" />
        <splash src="res/android/splash/drawable-hdpi/Splash.png" density="hdpi" />
        <splash src="res/android/splash/drawable-xhdpi/Splash.png" density="xhdpi" />
        <splash src="res/android/splash/drawable-xxhdpi/Splash.png" density="xxhdpi" />
        <splash src="res/android/splash/drawable-xxxhdpi/Splash.png" density="xxxhdpi" />
        <preference name="SplashScreenDelay" value="3000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
</widget>
