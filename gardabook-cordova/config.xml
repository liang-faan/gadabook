<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gardabook.mobileapp" version="0.2.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>GardaBook</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>
        <icon src="res/android/logo/drawable-ldpi/logo-icon.png" density="ldpi" />
        <icon src="res/android/logo/drawable-mdpi/logo-icon.png" density="mdpi" />
        <icon src="res/android/logo/drawable-hdpi/logo-icon.png" density="hdpi" />
        <icon src="res/android/logo/drawable-xhdpi/logo-icon.png" density="xhdpi" />
        <icon src="res/android/logo/drawable-xxhdpi/logo-icon.png" density="xxhdpi" />
        <icon src="res/android/logo/drawable-xxxhdpi/logo-icon.png" density="xxxhdpi" />
        <splash src="res/android/splash/drawable-ldpi/Splash.png" density="ldpi" />
        <splash src="res/android/splash/drawable-mdpi/Splash.png" density="mdpi" />
        <splash src="res/android/splash/drawable-hdpi/Splash.png" density="hdpi" />
        <splash src="res/android/splash/drawable-xhdpi/Splash.png" density="xhdpi" />
        <splash src="res/android/splash/drawable-xxhdpi/Splash.png" density="xxhdpi" />
        <splash src="res/android/splash/drawable-xxxhdpi/Splash.png" density="xxxhdpi" />
        <preference name="SplashScreenDelay" value="3000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
